#!/usr/bin/env bash

set -e

# This is used for the Hang at the end, for disabling it.
SCRIPT_PATH=$(readlink -f "${BASH_SOURCE[0]}")

# Ensure $HOME exists
if [ -z "$HOME" ]; then
    echo "❌ HOME variable not set!"
    exit 1
fi

# COMMENTED FOR TESTING PURPOSES
# Check if Proton VPN CLI is installed.
# if ! command -v protonvpn >/dev/null 2>&1; then
    # echo "Proton VPN CLI is not installed." >&2
    # exit 1
# fi

# Definitions
REPO_DIR="$HOME/GitHub/NikoboiNFTB/Proton-VPN"

# Clone repo, update if already present.
if [ -d "$REPO_DIR" ]; then
    echo "ℹ️  Cloning repository..."
    git clone https://github.com/NikoboiNFTB/Proton-VPN "$REPO_DIR"
else
    echo "ℹ️  Updating repository..."
    cd $REPO_DIR
    git pull
fi

# Replace $HOME with your actual home
sed -i "s|Icon=\$HOME|Icon=$HOME|g" "$REPO_DIR/vpn.desktop"
sed -i "s|Exec=\$HOME|Exec=$HOME|g" "$REPO_DIR/vpn.desktop"

# Copy .desktop files
echo "ℹ️  Copying desktop file..."

cp $REPO_DIR/vpn.desktop $HOME/Desktop/vpn.desktop

# Change your actual home back to $HOME in repo
sed -i "s|Icon=$HOME|Icon=\$HOME|g" "$REPO_DIR/vpn.desktop"
sed -i "s|Exec=$HOME|Exec=\$HOME|g" "$REPO_DIR/vpn.desktop"

# Hang

KEEP_OPEN=true

if [ "$KEEP_OPEN" = true ]; then
    echo
    read -p "Press 'Enter' to exit / Type 'disable' to disable hanging (local only): " response
    if [ "$response" = "disable" ]; then
        sed -i 's/^KEEP_OPEN=true/KEEP_OPEN=false/' "$SCRIPT_PATH"
        echo
        echo "KEEP_OPEN set to false"
        echo "Change 'KEEP_OPEN=true' to enable"
        echo
        for i in {5..1}; do
            echo -n "Exiting in $i..."
            sleep 1
            echo -ne "\r"
        done
        echo "Exiting now.        "
    fi
fi
